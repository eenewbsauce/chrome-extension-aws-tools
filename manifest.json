{
  "manifest_version": 2,

  "name": "Trello Clean Mode",
  "description": "This extension strips down Trello boards to eliminate noise",
  "version": "1.0",
  "icons": {
    "128": "icon_100.png"
  },
  "background": {
    "persistence": true,
    "scripts": ["jquery.js", "main.js", "navigation-handler.js", "options.js"]
  },
  "content_scripts": [{
    "css": ["main.css"],
    "js": ["jquery.js", "dom.js", "navigation-handler.js"],
    "matches": ["https://*.trello.com/*"]
  }],
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon_100.png",
    "default_popup": "popup.html"
  },
  "version": "1.1"
}
